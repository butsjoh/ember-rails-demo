<td>{{post.id}}</td>
<td class="data">
  {{#if isEditing}}
    {{view App.Views.Posts.EditView postBinding="post"}}
  {{else}}
    {{post.title}} - {{post.body}}
  {{/if}}
  <div class="commands">
    {{#unless isEditing}}
      <a {{action "showEdit"}}>Edit</a>
      <a {{action "destroyRecord"}}>Remove</a>
    {{/unless}}
  </div>
</td>
