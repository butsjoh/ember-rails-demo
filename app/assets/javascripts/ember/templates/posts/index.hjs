Post#index
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
  {{#each post}}
    {{#if this.id}}
      {{view App.PostView postBinding="this"}}
    {{/if}}
  {{/each}}
  </tbody>
</table>
<div class="commands">
  <a href="#posts/new">New Post</a>
  <a href="#" {{action "refreshListing"}}>Refresh</a>
</div>